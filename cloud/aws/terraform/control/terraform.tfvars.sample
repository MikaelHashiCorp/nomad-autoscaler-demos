region             = "us-west-2"
availability_zones = ["us-west-2a"]
# ami              = "ami-0bd21458ecf89f85e"  # Optional: specify existing AMI or leave empty to build automatically
# cleanup_ami_on_destroy = false  # Set to false to keep AMI when running terraform destroy (default: true)
key_name           = "my-dev-ec2-keypair"
owner_name         = "alovelace"
owner_email        = "alovelace@example.com"
stack_name              = "ll-autoscale"   # (19 char max) Your initials, Stack Title, Git Branch
server_instance_type    = "t3a.medium" 
server_count            = 1
client_instance_type    = "t3a.medium"
client_count            = 1
allowlist_ip            = []   # example: ["73.001.01.170/32", "97.001.01.2/32"]

# Windows Client Configuration (optional)
# Uncomment to enable Windows clients alongside or instead of Linux clients
# windows_client_instance_type = "t3a.medium"
# windows_client_count         = 1
# windows_ami                  = ""  # Leave empty to build automatically, or specify existing Windows AMI

# Operating System Configuration (for Packer builds only)
# If 'ami' is empty, Packer will build a new AMI with these settings
# If 'ami' is specified, these are ignored and OS info comes from AMI tags
# Defaults: Ubuntu 24.04 (noble)
#
# To build with RedHat 9, add to terraform apply command:
#   terraform apply -var="packer_os=RedHat" -var="packer_os_version=9.6.0" -var="packer_os_name="
#
# Windows Client Configuration:
# Windows clients use a separate AMI from Linux servers/clients
# packer_windows_version = "2022"  # Windows Server version (default: 2022)
#
# Deployment Scenarios:
# 1. Linux-only (default):     client_count=1, windows_client_count=0
# 2. Windows-only clients:     client_count=0, windows_client_count=1
# 3. Mixed OS (both):          client_count=1, windows_client_count=1

